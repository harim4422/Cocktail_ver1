<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent">

    <EditText android:layout_height="45dp" android:layout_width="290dp" android:layout_alignParentStart="true" android:layout_alignParentTop="true" android:text="Name" android:inputType="textPersonName" android:ems="10" android:id="@+id/TF_location"/>

    <Button android:layout_height="45dp" android:layout_width="100dp" android:layout_alignParentTop="true" android:text="Search" android:id="@+id/B_search" android:onClick="onClick" android:layout_toEndOf="@+id/TF_location"/>

    <fragment android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_alignParentStart="true" android:id="@+id/map" android:layout_below="@+id/B_hopistals" android:layout_alignParentBottom="true" tools:context="com.example.priyanka.mapsdemo.MapsActivity" android:name="com.google.android.gms.maps.SupportMapFragment" xmlns:tools="http://schemas.android.com/tools" xmlns:map="http://schemas.android.com/apk/res-auto"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignParentStart="true" android:text="Hospitals" android:id="@+id/B_hopistals" android:onClick="onClick" android:layout_below="@+id/TF_location"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Schools" android:id="@+id/B_schools" android:onClick="onClick" android:layout_toEndOf="@+id/B_hopistals" android:layout_below="@+id/TF_location"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Restautants" android:id="@+id/B_restaurants" android:onClick="onClick" android:layout_toEndOf="@+id/B_schools" android:layout_below="@+id/TF_location"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="To" android:id="@+id/B_to" android:onClick="onClick" android:layout_toEndOf="@+id/B_restaurants" android:layout_alignBottom="@+id/B_restaurants"/>

</RelativeLayout>